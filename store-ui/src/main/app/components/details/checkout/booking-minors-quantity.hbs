<div class="form-group has-feedback">
    <select name="minorsQuantity" required class="form-control select2-control" placeholder="{{t 'activity.checkout.minors-label'}}">
        {{#select minorsQuantity}}
            <option value="">{{#if isPhone}}{{t 'activity.checkout.minors-label'}}{{/if}}</option>
            <option value="0">0</option>
                {{#each values}}
                    <option value="{{this}}">{{this}}</option>
                {{else}}
                    {{#unless limitedQuota}}
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                    {{/unless}}
                {{/each}}
        {{/select}}
    </select>
<!-- 	<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true" style="display: none;"></span> -->
</div>
