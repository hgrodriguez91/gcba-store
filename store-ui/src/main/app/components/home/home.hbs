        <div class="container">
            <div class="box-title-recomendation">
                <h2>{{t 'home.recommended-title'}}</h2>
            </div>
            <ul id="recommended-activities" class="list-unstyled activity-collection activity-collection-grid">
                {{{collectionOf 'homeActivityRecommendedView' recommendations}}}
            </ul>
        </div>
    </section>
{{/any}}

<section class="popular-activities">
    <div class="container">
        <hr style="height: 1px;background: black; margin:0;">
        <div class="box-title-popular">
            <h2>{{t 'home.most-popular-title'}}</h2>
        </div>
        <ul id="popular-activities" class="list-unstyled activity-collection activity-collection-grid">
            {{{collectionOf 'homeActivityView' popular_activities}}}
        </ul>
    </div>
</section>

