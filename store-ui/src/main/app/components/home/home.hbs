<div class="home-slider">
    <div id="home-slider-container" class="slide-header">
       
        {{#any collections}}
         <h1>{{t 'home.slider.title'}}</h1>
            <ul>
                <li class="home-slide-collection image-as-background">
                    <img src="{{baseImageURL}}/home-slide/slide-default.jpg" alt=""/>
                    <!--<div class="slide-header-content">
                        <div class="container" style="padding-bottom: 180px;">
                            <h1>{{t 'home.slider.title'}}</h1>
                        </div>
                    </div>-->
                    <div class="slide-header-content">
                        <div class="container">
                            <h1>{{t 'home.slider.title'}}</h1>
                            <!--<h3 style="margin: 0;">{{t 'home.slider.life-is-outside'}}</h3>-->
                            <div class="discovery-btn">
                                <a href="{{baseURL}}{{activitiesURL}}" class="btn btn-lg btn-primary">{{t 'home.slider.discovery'}}</a>
                            </div>
                        </div>
                    </div>
                </li>
                {{#each collections}}
                    <li class="home-slide-collection">
                        <div class="image-as-background">
                            <img src="{{image}}" alt="{{name}}" title="{{description}}">
                             <!--<div class="slide-header-content">
                                <div class="container" style="padding-bottom: 180px;">
                                    <h1>{{t 'home.slider.title'}}</h1>
                                </div>
                            </div>-->
                        </div>
                        {{> homeSlideCollectionInfo this}}
                    </li>
                {{/each}}
            </ul>
        {{/any}}
        {{#empty collections}}
            <ul>
                <li class="image-as-background"><img src="{{baseImageURL}}/home-slide/slide-default.jpg" alt=""/></li>
            </ul>
            <div class="slide-header-content">
                <div class="container">
                    <h1>{{t 'home.slider.life-is-outside'}}</h1>
                    <div class="discovery-btn">
                        <a href="{{baseURL}}{{../activitiesURL}}" class="btn btn-lg btn-primary">{{t 'home.slider.discovery'}}</a>
                    </div>
                </div>
            </div>
        {{/empty}}
        <span class="arrow prev"></span>
        <span class="arrow next"></span>
    </div>
    <!--<div class="home-search-bar">
        <div class="container">
            <div id="search-form"></div>
        </div>
    </div>-->
</div>

<section class="home-categories">
    <div class="container">
        <!--<div class="box-title">
            <h3>{{t 'home.categories-title'}}</h3>
        </div>-->
        <section id="home-categories-slider">
            <ul class="list-unstyled list-inline home-categories-list">
                {{#each top_categories}}
                <li><a class="" href="{{../baseURL}}{{../activitiesURL}}/{{lowercase public_code}}"><img src="{{#if thumbnail}}{{thumbnail}}{{else}}{{../../baseImageURL}}/categorie.png{{/if}}" /><b>{{name}}</b></a></li>
                {{/each}}
            </ul>
        </section>
        <hr style="height: 1px;background: black">
    </div>
</section>
