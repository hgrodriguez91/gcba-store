<li>
	<div class="comment">
		<div class="media">
			<div class="media-left">
				<a href="#" title="{{review.customerName}}"> <img
					src="{{review.customerPhoto}}" class="media-object" alt="{{review.customerName}}" width="60" height="60">
				</a>
			</div>
			<div class="media-body">
				<div style="display: table; width: 100%;">
					<div class="comment-body">
						<p>{{review.comment}}</p>
					</div>
					<div class="comment-rating">
						<span class="rating">
							<span class="star {{#is review.rating 5}}selected{{/is}}"></span>
							<span class="star {{#is review.rating 4}}selected{{/is}}"></span>
							<span class="star {{#is review.rating 3}}selected{{/is}}"></span>
							<span class="star {{#is review.rating 2}}selected{{/is}}"></span>
							<span class="star {{#is review.rating 1}}selected{{/is}}"></span>
						</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</li>